<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>
    <h1><%= title %></h1>
    <% if (posts.length > 0) { %> 
        <% posts.forEach(post => { %> 
            <a href="/posts/<%= post._id %>" >
                <h3><%= post.title %></h3>
            </a>
                <p><%= post.body %></p>
        <% }) %> 
    <% } else {%> 
        <p>No posts to display...</p>
    <% } %> 
    <%- include("./partials/footer.ejs") %>
</body>
</html>